# Example Docker environment file
# Copy this file to .env.docker and fill in your values

# Node environment
NODE_ENV=production

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Airtable Configuration
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_airtable_base_id_here
AIRTABLE_EVENTS_TABLE_ID=your_airtable_events_table_id_here
AIRTABLE_ALIASES_TABLE_ID=your_airtable_aliases_table_id_here

# Optional Configuration
AIRTABLE_RATE_LIMIT_DELAY=0.2
AIRTABLE_MAX_RETRIES=3
AIRTABLE_TIMEOUT_SECONDS=30

# Directory Configuration
EVENT_BIBLE_DATA_DIR=data/event-bible
EVENT_BIBLE_DOCS_DIR=docs/app/docs/semantic-events/bible

# Backup Configuration
EVENT_BIBLE_BACKUP_ENABLED=true
EVENT_BIBLE_BACKUP_COUNT=5

# Runtime Configuration
EVENT_BIBLE_DRY_RUN=false
EVENT_BIBLE_VERBOSE=false